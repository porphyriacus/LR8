{
  "settings": {
    "index": {
      "max_ngram_diff": 20,
      "analysis": {
        "tokenizer": {
          "ngram_tokenizer": {
            "type": "ngram",
            "min_gram": 1,
            "max_gram": 20,
            "token_chars": [
              "letter",
              "digit"
            ]
          }
        },
        "analyzer": {
          "custom_index_analyzer": {
            "type": "custom",
            "tokenizer": "ngram_tokenizer",
            "filter": [
              "lowercase"
            ]
          },
          "custom_search_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "custom_index_analyzer",
        "search_analyzer": "custom_search_analyzer"
      },
      "surname": {
        "type": "text",
        "analyzer": "custom_index_analyzer",
        "search_analyzer": "custom_search_analyzer"
      },
      "fathername": {
        "type": "text",
        "analyzer": "custom_index_analyzer",
        "search_analyzer": "custom_search_analyzer"
      },
      "sex": {
        "type": "integer"
      },
      "age": {
        "type": "text", 
        "analyzer": "custom_index_analyzer",
        "search_analyzer": "custom_search_analyzer"
      },
      "address": {
        "type": "text",
        "analyzer": "custom_index_analyzer",
        "search_analyzer": "custom_search_analyzer"
      },
      "discount": {
        "type": "text", 
        "analyzer": "custom_index_analyzer",
        "search_analyzer": "custom_search_analyzer"
      },
      "is_float": {
        "type": "integer"
      }
    }
  }
}


